{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src", 
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/types"] 
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules" 
  ],
  "files": [
    "src/types/express.d.ts" 
  ]
}
